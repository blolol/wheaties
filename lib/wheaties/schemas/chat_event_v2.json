{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://blolol.com/json-schemas/chat_event_v2.json",
  "type": "object",
  "properties": {
    "version": {
      "enum": [2, "2"]
    },
    "to": {
      "type": "string"
    },
    "representations": {
      "type": "object",
      "properties": {
        "discord": {
          "$comment": "Any valid Discord webhook JSON",
          "type": "object"
        },
        "irc": {
          "type": "object",
          "properties": {
            "type": {
              "enum": ["action", "message", "notice"]
            },
            "from": {
              "$comment": "Valid RELAYMSG nickname containing a forward slash",
              "type": "string",
              "pattern": "^\\w+\\/\\w+$"
            },
            "text": {
              "type": "string"
            }
          },
          "required": ["text"]
        }
      }
    }
  },
  "required": ["version", "to", "representations"]
}
